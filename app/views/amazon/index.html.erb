
<%= form_tag(root_path, method: :get, remote: true, class: "form-inline-", style: 'margin-bottom: 20px;') do %>
  <div class="input-group">
    <div class="form-group">
      <%= label_tag :q, "キーワード", class: "control-label sr-only" %>
      <%= search_field_tag :q, @query, {class: "form-control", placeholder: "キーワードまたはASINを入力してください"} %>
    </div>
    <span class="input-group-btn">
      <!-- <%= submit_tag "検索", class: "btn btn-default" %> -->
      <button class="btn btn-default" type="submit" onclick="$('#spin').spin();"><i class="glyphicon glyphicon-search"></i> 検索</button>
    </span>
  </div><!-- /input-group -->
<% end %>

<!-- loading画像 -->
<div id="spin"></div>

<div class="error">
<% if flash[:alert] %>
  <!-- alert -->
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>
</div>

<% if params[:q].blank? && params[:asin].blank? %>
  <div class="row" id="top-body">
    <div class="col-sm-3"></div>
  	
    <div class="col-sm-6" id="info">
